# ============================================
# Hyperliquid Bot 環境変数設定
# ============================================

# --------------------------------------------
# Hyperliquid取引所API（必須）
# --------------------------------------------
# APIキー取得: https://app.hyperliquid.xyz/ → API メニュー
# テストネット: https://app.hyperliquid-testnet.xyz/
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here
EXCHANGE_BASE_URL=https://api.hyperliquid.xyz
EXCHANGE_WS_URL=wss://api.hyperliquid.xyz/ws
EXCHANGE_TESTNET=true

# --------------------------------------------
# アプリケーション設定
# --------------------------------------------
APP_ENVIRONMENT=development
APP_DEBUG=true

# --------------------------------------------
# ロギング
# --------------------------------------------
# debug, info, warn, error
LOG_LEVEL=info

# --------------------------------------------
# リスク管理
# --------------------------------------------
RISK_MAX_POSITION_SIZE=1.0
RISK_MAX_LEVERAGE=3.0

# ============================================
# AIシグナル取引用データソース（オプション）
# ============================================
# 以下のAPIは ai_signal 戦略使用時に必要

# --------------------------------------------
# CoinGlass API（デリバティブデータ）
# --------------------------------------------
# APIキー取得: https://www.coinglass.com/CryptoApi
# 提供データ: Funding Rate, OI, ロング/ショート比率, 清算
COINGLASS_API_KEY=your_coinglass_api_key

# --------------------------------------------
# Whale Alert API（大口取引監視）
# --------------------------------------------
# APIキー取得: https://whale-alert.io/
# 提供データ: 大口ブロックチェーン取引
WHALE_ALERT_API_KEY=your_whale_alert_api_key
WHALE_ALERT_MIN_VALUE=500000

# --------------------------------------------
# LunarCrush API（ソーシャルセンチメント）
# --------------------------------------------
# APIキー取得: https://lunarcrush.com/developers/api/endpoints
# 提供データ: SNSセンチメント, Galaxy Score, トレンド
LUNARCRUSH_API_KEY=your_lunarcrush_api_key

# --------------------------------------------
# CME FedWatch API（Fed金利予想）
# --------------------------------------------
# APIキー取得: https://www.cmegroup.com/market-data/market-data-api/fedwatch-api.html
# 提供データ: FOMC利上げ/利下げ確率
# 注意: 有料API（月額$25〜）
FEDWATCH_API_KEY=your_fedwatch_api_key

# --------------------------------------------
# Trading Economics API（経済指標）
# --------------------------------------------
# APIキー取得: https://tradingeconomics.com/api/
# 提供データ: CPI, GDP, 失業率, 経済カレンダー
TRADING_ECONOMICS_API_KEY=your_trading_economics_api_key
